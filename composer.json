{
    "name": "fof/gamification",
    "description":  "Upvotes and downvotes for your Flarum community",
    "keywords": [
        "flarum",
        "friendsofflarum",
        "misc",
        "settings",
        "points",
        "gamification"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Lopez",
            "email": "Christian.Lopez@redevs.org",
            "homepage": "https://redevs.org"
        },

        {
          "name": "Charlie K",
          "email": "Charlie.K@redevs.org",
          "homepage": "https://redevs.org"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/gamification/issues",
        "source": "https://github.com/FriendsOfFlarum/gamification"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.9"
    },
    "replace": {
        "reflar/gamification": "*"
    },
    "autoload": {
        "psr-4": {
            "FoF\\Gamification\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Gamification",
            "icon": {
                "name": "fas fa-thumbs-up",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/20671-friendsofflarum-gamification"
        }
    }
}
